@using System.Web.UI.HtmlControls
@model List<LalokNet.Models.VkPost>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Новости лалки</title>
</head>
<body>

<style>
    .postStyle {
        background: blanchedalmond;
        background: linear-gradient(to top, skyblue, azure);
        margin: 15px;
        padding: 8px;
        border-radius: 10px;
        box-shadow: 3px 3px 3px 3px black;
    }

    .bottomParamBlock {
        display: inline-block;
        margin: auto 10px;
        font-weight: bold;
        vertical-align: middle;
    }
    .bottomParamImage {
        position:relative;
        top: 5px;
    }
</style>


    <h3>Запрос поиска постов друзей выполнялся: @ViewBag.ExecTime секунд</h3>
    <br/>

    <div style="margin: 30px auto; width: 650px;">
        @{
            var k = 0;
        }

        @foreach (var post in Model) {            
            <div class="postStyle">
                <div style="width: 100%;">
                    @{
                        k++;
                    }
                    <div style="display: inline-block; margin-bottom: 15px; font-weight: bold;"><a href="https://vk.com/id@(post.from_id)?w=wall@(post.from_id)_@(post.id)">№@k</a> @post.name 
                    </div>
                    <div style="display: inline-block; float: right; margin-bottom: 15px; color: darkgray">@post.getDate</div>
                </div>

                <div>@post.text</div>
                <br clear="all"/>

                <div>
                    @{
                        if (post.attachments != null && post.attachments.Length > 0)
                        {
                            foreach (var attachment in post.attachments.Where(attachment => attachment.photo != null))
                            {
                                <div style="display: inline-block; margin: 10px;"><img src="@attachment.photo.photo_604" width="250"/>
                                </div>
                            }
                        }
                    }
                </div>

                <div>
                    <div class="bottomParamBlock">
                        @post.likes.count <img class="bottomParamImage" src="http://www.iconsearch.ru/uploads/icons/medicalvista/128x128/heart_beat.png" width="20"/>
                    </div>
                    <div class="bottomParamBlock">
                        @post.reposts.count <img class="bottomParamImage" src="https://change-wm.com/wp-content/uploads/repost.png" width="20"/>
                    </div>
                    <div class="bottomParamBlock">
                        @post.comments.count <img class="bottomParamImage" src="http://s1.iconbird.com/ico/2013/8/429/w128h1281377939697185079bubblecommentstreamlinetalk3.png" width="20"/>
                    </div>
                </div>
            </div>
        }

    </div>


</body>
</html>