@model IEnumerable<LalokNet.Models.User>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GroupPage</title>
</head>
<body>

<style>
	.personBlock {
		width: 360px;
		height: 110px;
		display: inline-block;
		background: #FFFFFF;
		/*background: linear-gradient(to top, skyblue, azure);*/
		margin: 10px;
		padding: 5px;
		/*border-radius: 4px;*/
		box-shadow: 0px 0px 2px 1px black;
		/*cursor: pointer;
			opacity: 0.9;*/
	}

	/*.personBlock:hover {
			opacity: 1;
		}*/

	.personAvatar {
		float: left;
		margin: 5px;
		margin-right: 11px;
	}

	.postsButton {
		background: url(http://onproperty.com.au/wp-content/uploads/2013/12/blog-post-icon.png) no-repeat center center;
		display: block;
		width: 20px;
	}

	#backButton {
		position: fixed;
		left: 0px;
		top: 0px;
		margin: 0;
		padding: 0;
		cursor: pointer;
		text-align: center;
	}

	.groupFrame {
		position: fixed;
		left: 0px;
		top: 80px;
		width: 220px;
		box-shadow: 0px 0px 2px 1px black;
		background-color: #EEEEEE
	}
</style>

<div id="backButton" onclick="location.href='@Url.Action("Index")'">
	<img style="margin: 2px 10px 0px; padding: 0" src="http://s1.iconbird.com/ico/2013/10/464/w128h1281380984457back3.png" width="46" height="40" onmouseover="document.getElementById('backButton').style.backgroundColor = '#EDEDED'" onmouseout="document.getElementById('backButton').style.backgroundColor = 'transparent'"/>
</div>

<div class="groupFrame">
	<img src="@ViewBag.Img" style="padding: 0; margin: 10px 10px 0px 10px;" />
	<div style="padding: 2px 0px 5px 0px; font-size: 16pt; font-family: sans-serif; text-align: center">@(ViewBag.Name)</div>
</div>

<div style="margin: 30px auto; width: 800px;">
	<br/>

	@{
		int k = 0;
	}
	
	

	@foreach (var user in Model)
	{
		k++;
		<div class="personBlock">
			<div class="personAvatar"><img src="@user.Avatar100PxLink"/>
			</div>

			<div style="margin-top: 7px;">
				<div style="color: gray; display: inline">#@k</div> <b>@user.FirstName @user.LastName</b><br/>
			</div>
			Друзей: @user.FriendsIds.Count<br/>
			<div style="display: inline-block; margin-top: 10px;">
				<a href="@Url.Action("GetUserPage", new {userId = user.VkId})" alt="Посмотреть ленту юзера">
					<img src="https://turnkeyit.co.uk/assets/img/Prose-Icon-(Blog).png" width="30"/>
				</a>
			</div>
			&nbsp;
			<div style="display: inline-block;">
				<a href="https://vk.com/id@(user.VkId)" alt="Перейти на страницу в вк">
					<img src="https://cdn3.iconfinder.com/data/icons/social-media-chat-1/512/VK-128.png" width="30"/>
				</a>
			</div>
		</div>
	}

</div>

</body>
</html>
